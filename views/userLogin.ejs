<% layout("/layouts/boilerplate.ejs") -%>
<form class="needs-validation col-6 offset-3" novalidate method="post" action="/login">
    <div>
        <br>
        <h1>Login to Lovevisit</h1>
        <br>
        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input name="username" placeholder="Enter the username" type="text" id="username" class="form-control"required >
            <div class="valid-feedback">Username looks good</div>
            <div class="invalid-feedback">Please enter username</div> 
         </div>

         <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input name="password" placeholder="Enter the password" type="password" id="password" class="form-control"required >
            <div class="invalid-feedback">Password must required</div> 
         </div>

        <button class="btn btn-success mb-3">Login</button>
    </div>
</form>