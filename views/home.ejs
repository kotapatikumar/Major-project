
<% layout("/layouts/boilerplate.ejs") -%>




<style>
  #filter{
    display:flex;
    align-items:center;
    flex-wrap: wrap;
  }
  .filter{
    margin-left:1.8rem;
    margin-top:1.4rem;
    margin-bottom: 0.8rem;
    font-size:0.8rem;
    text-align: center;
    opacity:0.75;
  }
  .filter:hover{
    opacity: 1;
    cursor:pointer;
  }
  .tax-toggle{
    margin-left:7rem;
    margin-bottom:1rem;
    height:2.4rem;
    border:1px solid black;
    border-radius: 1rem;
    width:15rem;
  }
  .tax-label{
    text-align:center;
    position:relative;
    left:-1.15rem;
    top:0.35rem;
  }
  .switch{
    text-align:center;
    position:relative;
    left:-1rem;
    top:0.35rem;
  }
  .tax{
    display:none;
  }

</style>


  
 


   <div id="filter">
      <div class="filter">
        <div><i class="fa-solid fa-fire icon"></i></div>
        <p>Trending</p>
      </div>
      
      <div class="filter">
        <div><i class="fa-solid fa-bed icon"></i></div>
        <p>Rooms</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-mountain-city icon"></i></div>
        <p>Iconic Cities</p>
      </div>

      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome icon"></i></div>
        <p>Castles</p>
      </div>

      <div class="filter">
        <div>  <i class="fa-solid fa-mountain icon"></i></div>
        <p>Mountains</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-person-swimming icon"></i></div>
        <p>Amazing Pools</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-cow icon"></i></div>
        <p>Farms</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-snowflake icon"></i></div>
        <p>Arctic</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-campground icon"></i></div>
        <p>Camping</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>


      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>



      
      <div class="form-check-reverse form-switch tax-toggle">
        <input class="form-check-input switch" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label tax-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>


   </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      
      <% for(list of value){%>
        <a class="effect" href="/listings/<%= list._id%>">

        <div class="card col listing-card" >
          <img src="<%= list.image.url%>" class="card-img-top" alt="Listging_Random_Image">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text"><b id="title"><%= list.title %></b>
              <br>
              &#8377;<%= list.price!==null?list.price.toLocaleString("en-IN"):"Undefined" %>/ night &nbsp;&nbsp;<i class="tax">+18% GST</i>
            </p>
          </div>
        </div> 
        </a>   
     <% } %> 
  </div>

<script>
  let taxToggle=document.getElementById("flexSwitchCheckDefault")
  taxToggle.addEventListener("click",()=>{
    let taxes=document.getElementsByClassName("tax");
    for(tax of taxes){
      if(tax.style.display!=="inline"){
      tax.style.display="inline";
      }else{
        tax.style.display="none";
      }
    }
  })
</script>